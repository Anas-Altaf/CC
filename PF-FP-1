#include<iostream>
#include<windows.h>
#include<cstdlib>
#include<ctime>
using namespace std;
const int ROW=10,COL=10;
void board10x10(char board[][COL]);
void symbolgenrator(char board[][COL]);
void symbolgenrator2(char board[][COL]);
void checker(char board[][COL]);
void checkedGenrate(char board[][COL]);
int main()
{
	char board[ROW][COL];
	symbolgenrator(board);
	checker(board);
	checkedGenrate(board);
	board10x10(board);
	system("pause");
	return 0;
}
void symbolgenrator(char board[ROW][COL])
{
	srand(time(0));
	for(int i=0;i<ROW;i++)
	{
		for(int j=0;j<COL;j++)
		{	
			board[i][j]=(rand()%5)+35;
		}
	}
}
void board10x10(char board[][COL])
{
	cout<<"Here is the Board : "<<endl;
	cout<<".---.---.---.---.---.---.---.---.---.---."<<endl;
	cout<<"|   |   |   |   |   |   |   |   |   |   |"<<endl;
	for(int i=0;i<ROW;i++)
	{
		cout<<"| ";
		for(int j=0;j<COL;j++)
		{
			cout<<board[i][j]<<" | ";	
		}
		if(i==ROW-1)
			cout<<endl<<"|...|...|...|...|...|...|...|...|...|...|"<<endl;
		else
		{
		cout<<endl<<"|___|___|___|___|___|___|___|___|___|___|";
		cout<<endl<<"|   |   |   |   |   |   |   |   |   |   |"<<endl;
		}
	}
}
void symbolgenrator2(char board[ROW][COL])
{
	srand(time(0));
	for(int i=0;i<ROW;i++)
	{
		for(int j=0;j<COL;j++)
		{		
			{
				if(board[i][j]==' ')
					board[i][j]=(rand()%5)+35;
			}
		}
	}
}
void checker(char board[][COL])
{
	for(int i=0;i<ROW;i++)
	{
		for(int j=0;j<COL;j++)
		{
			if((board[j][i]==board[j+1][i]&&board[j][i]==board[j+2][i])||(board[i][j]==board[i][j+1]&&board[i][j]==board[i][j+2]))
			{
				board[j+1][i]=' ';
				board[i][j+1]=' ';
			}
			
		}
	}
	
}
void checkedGenrate(char board[][COL])
{
	for(int i=0;i<ROW;i++)
	{
		for(int j=0;j<COL;j++)
			{
				while(board[j][i]==' ')
				{
					symbolgenrator2(board);
					checker(board);
				}
				
			}
	}
}
